 <div class="mx-auto container">
  <div class="row">
  　<div class="col"> 
 
       <h3 class="border border-warning rounded-pill text-center">運動一覧・追加</h3>
      <p></p>
      <!-- form_with部分 -->
      <%= form_with model: Sport.new,url: admin_sports_path,method: :post do |f| %>
        <h4>ジャンル名</h4>
        <%= f.text_field :name %>
        <%= f.text_field :kcal %>kcal
        <!--テキストフィールドのところのnameはカラムのところと同じ記述にしなければならない-->
        <%= f.submit '新規登録' %>
      <% end %>
      <p></p>
      <table>
       <tbody>
      <p>ジャンル一覧</p>
      <% @sports.each do |sport| %>
        <tr>
        <td><%= sport.name %></td>
        <td><%= sport.kcal %></td>
        <td>
          <%= link_to "消去する", admin_sport_path(sport.id),method: :delete %>
        </td>
      
      
        </tr>
      <% end %>
    </div>
  </div>
</div>