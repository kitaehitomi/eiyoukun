
<h3>会員情報編集</h3>

<!--<%#= form_for(resource, as: resource_name, url: registration_path(resource_name) do |f| %>-->
<!--↑の1行はデバイスを使うときに必要な文章。カレントユーザーとかの機能を使うときに使用。これがリソースのこと。-->
<!--パスワードを使うときはリソース（デバイスのルート）が必要やけど、今回はパスワードを変える必要がない。-->

<%= form_with model: @customer ,url: public_customers_update_path, method: :patch do |f| %>
<%= f.file_field :profile_image, accept: "image/*" %>
名前
   <div class="field">
  <%= f.label :姓 %>
  <%= f.text_field :first_name %>
  <%= f.label :名 %>
  <%= f.text_field :last_name %>
<br>
フリガナ
  <div class="field">
  <%= f.label :セイ %>
  <%= f.text_field :first_name_kana %>
  <%= f.label :メイ %>
  <%= f.text_field :last_name_kana %>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

     <div class="field">
  <%= f.label :郵便番号 %>
  <%= f.number_field :postal_code %><br>

  <div class="field">
  <%= f.label :住所 %>
  <%= f.text_field :address %><br>

  <div class="field">
  <%= f.label :電話番号 %>
  <%= f.number_field :telephone_number %><br>



  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
  <% end %>
  <%= link_to "退会する", public_customers_confirmation_path %>

