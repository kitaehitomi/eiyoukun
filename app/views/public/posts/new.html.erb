<div class="mx-auto container" style="">
    <div class="row">
      <div class="col-6 offset-3">
      <h3 class="border border-warning rounded-pill">投稿する</h3>
        <%= form_with model: @post_image,url:public_posts_path do |f| %>
          <h4>画像</h4>
            <%= f.file_field :image, accept: "image/*" %>
          <h4>タイトル</h4>
            <%= f.text_field :title %>
          <h4>説明</h4>
            <%= f.text_area :caption %>
          <%= f.submit '投稿' %>
        <% end %>
    </div>
</div>