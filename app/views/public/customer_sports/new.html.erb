<p>ジャンル一覧</p>
<% @sports.each do |sport| %>
<%= sport.name %>
<%= sport.kcal %>
<%= form_with model: @new_customer_sport,url: public_customer_sports_path do |f| %>
<%= f.hidden_field :customer_id, :value => current_customer.id %> <!-- 別のテーブルのidを渡す -->
<%= f.hidden_field :sport_id, :value => sport.id %>
<%= f.submit '記録する' %>
<% end %>
<% end %>

